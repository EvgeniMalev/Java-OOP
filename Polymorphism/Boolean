public class BooleanOperations {

    public boolean andOperation(boolean x, boolean y) {
        return x && y;
    }

    public boolean orOperation(boolean x, boolean y) {
        return x || y;
    }

    public boolean complexOperation(boolean x, boolean y, boolean z, boolean p) {
        return (x && y) || (x || y);
    }

    public static void main(String args[]) {
        BooleanOperations operations = new BooleanOperations();
        System.out.println(operations.andOperation(true, false));
        System.out.println(operations.orOperation(true, true));
        System.out.println(operations.complexOperation(false, false, false, false));
    }
}
